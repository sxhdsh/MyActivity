<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.lawliet.listviewwithlayout"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.NormalListViewActivity"/>

        <activity android:name=".activity.CustomListViewActivity"/>

        <activity android:name=".activity.SetListViewHeightActivity"/>

        <activity android:name=".activity.CustomLinearlayoutActivity"/>

        <activity android:name=".activity.UseAdapterActivity"/>

        <activity android:name=".activity.AddHeaderViewActivity"/>

    </application>

</manifest>
